<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Count">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="409dp"
        android:layout_height="150dp"
        android:src="@drawable/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imdBackHome"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/home"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="150dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:src="@drawable/bears"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="288dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="How many bears?"
        android:textColor="#ABFF5722"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="220dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="125dp"
        android:layout_height="69dp"
        android:text="6"
        android:textSize="40dp"
        android:textColor="#A48A05"
        android:textStyle="bold"
        android:backgroundTint="#FFF193"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="756dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="125dp"
        android:layout_height="69dp"
        android:text="1"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FF1505"
        android:backgroundTint="#FFA5A5"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="756dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="125dp"
        android:layout_height="69dp"
        android:text="4"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#2A6F2D"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="665dp"
        android:backgroundTint="#98F272"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="125dp"
        android:layout_height="69dp"
        android:text="2"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#267D8E"
        android:backgroundTint="#66CCFF"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="665dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
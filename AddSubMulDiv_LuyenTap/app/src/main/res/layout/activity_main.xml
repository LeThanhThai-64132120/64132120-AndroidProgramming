<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTru"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="621dp" />

    <EditText
        android:id="@+id/edtSoB"
        android:layout_width="260dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="Nhập số B"
        android:gravity="center"
        android:inputType="numberSigned"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="276dp" />

    <EditText
        android:id="@+id/edtSoA"
        android:layout_width="260dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="Nhập số A"
        android:gravity="center"
        android:inputType="numberSigned"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="253dp"
        android:layout_height="130dp"
        android:hint="KQ"
        android:textSize="45dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="465dp" />

    <Button
        android:id="@+id/btnChia"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="712dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="392dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số B:"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="276dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số A:"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/btnNhan"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="x"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="712dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CHƯƠNG TRÌNH\nTÍNH TOÁN 2 SỐ"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/btnCong"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="35dp"

        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="621dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
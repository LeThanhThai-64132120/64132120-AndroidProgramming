        tools:layout_editor_absoluteY="446dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn phép tính"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="531dp" />

    <Button
        android:id="@+id/btnChuVi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chu vi"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="579dp" />

    <Button
        android:id="@+id/btnDienTich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diện tích (có h)"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="531dp" />

    <Button
        android:id="@+id/btnDienTich2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diện tích"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="627dp" />

    <EditText
        android:id="@+id/edtcanhA"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="79dp"

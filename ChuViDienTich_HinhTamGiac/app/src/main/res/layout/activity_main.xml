        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="145dp" />

    <EditText
        android:id="@+id/edtcanhC"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:ems="10"

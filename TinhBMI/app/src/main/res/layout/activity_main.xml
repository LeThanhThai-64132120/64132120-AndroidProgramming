<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="21dp"
        android:text="TÍNH CHỈ SỐ BMI CƠ THỂ CỦA BẠN"
        android:textSize="23dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edtChieuCao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/edtCanNang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập cân nặng"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập chiều cao"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        tools:layout_editor_absoluteX="354dp"
        tools:layout_editor_absoluteY="129dp" />

    <Button
        android:id="@+id/btnTinhBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính BMI"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="302dp"
        android:onClick="TinhBMI"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="391dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lời khuyên"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="515dp" />

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="234dp"
        android:layout_height="70dp"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/tvLoiKhuyen"
        android:layout_width="373dp"
        android:layout_height="77dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="562dp" />
</androidx.constraintlayout.widget.ConstraintLayout>